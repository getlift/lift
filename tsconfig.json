{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "target": "es2017",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "isolatedModules": true
  },
  "include": [
    "plugin.ts",
    "bin/lift.ts",
    "test/**/*",
    "src/**/*"
  ]
}
